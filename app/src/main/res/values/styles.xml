<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/purple</item>
    </style>

    <style name="AppTheme.TranslucentAndroid">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.NoTitleBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoTitleBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">true</item>
    </style>

    <!-- Base Activity Themes -->
    <style name="AppTheme.Purple" parent="AppTheme.NoTitleBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/purple</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">false</item>
    </style>
    <style name="AppTheme.White" parent="AppTheme.NoTitleBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
    </style>
    <style name="AppTheme.Gray" parent="AppTheme.NoTitleBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/gray</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">false</item>
    </style>

    <style name="BigTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/bigTextSize</item>
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
    </style>

    <style name="SmallTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
    </style>

    <style name="DefaultEditTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="DefaultButton">
        <item name="android:textSize">@dimen/defaultButtonTextSize</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">202dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:background">@drawable/default_button_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
    </style>

</resources>
